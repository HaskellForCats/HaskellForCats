module Main where 

-- a need primative pulled from C  
-- FFI is how we connect with other languages 

import System.IO 
getCh :: IO Char
getCh  = do {hSetEcho stdin False
	    ;  c <- getChar
	    ;  hSetEcho stdin True
	    ;  return c
            }

hangman :: IO () 
hangman = 
	do 	putStrLn "Think of a word:  " 
		word <- sgetLine
		putStrLn "Try to guess it:" 
		guess word 


